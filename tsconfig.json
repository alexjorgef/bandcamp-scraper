{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    // "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "lib": [
      "es2015"
    ]
  },
  "include": ["src", "schemas"],
  "exclude": [
    "node_modules",
    "dist",
    "bin",
    "**/__tests__/*"
  ]
}
